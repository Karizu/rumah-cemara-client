<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    style="@style/sfDisplayFont"
    android:theme="@style/DialogTheme">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_size_medium"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <ImageView
                android:layout_width="52dp"
                android:layout_height="52dp"
                android:layout_margin="@dimen/margin_padding_size_micro"
                android:src="@drawable/icon_berhasil" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_medium"
                android:text="Your Appointment has been sent"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/NormalGreyText"
                android:text="Check Your Appointment List"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            android:background="@drawable/shadow_line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:padding="@dimen/margin_padding_size_small"
                android:gravity="center_horizontal"
                android:textColor="@color/green_text"
                android:text="Go to My List"/>
            <view
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@drawable/line"/>
            <TextView
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:padding="@dimen/margin_padding_size_small"
                android:textColor="@color/green_text"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:text="OK"/>
        </LinearLayout>
    </LinearLayout>

</LinearLayout>