<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/Wheat"
    android:orientation="vertical"
    tools:context=".home.service.asktheexpert.ChatExpertActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/row_toolbar_image" />

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="0dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/margin_padding_size_large"
            android:layout_marginTop="@dimen/margin_padding_size_medium"
            android:layout_marginRight="@dimen/margin_padding_size_large"
            android:layout_marginBottom="@dimen/margin_padding_size_medium"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display"
                android:text=""
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_size_small"
                    android:text="@string/create_on"
                    android:textSize="@dimen/text_size_nano" />

                <TextView
                    android:id="@+id/date_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/edit"
                    android:textSize="@dimen/text_size_nano" />

            </LinearLayout>
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/margin_padding_size_semi_large">

        <RelativeLayout
            android:id="@+id/messageContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingBottom="@dimen/margin_padding_size_medium">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:id="@+id/img_profile"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:src="@drawable/select_dp" />

                <TextView
                    android:id="@+id/message_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/buble_chat_putih_edit"
                    android:paddingLeft="@dimen/margin_padding_size_large"
                    android:paddingTop="@dimen/margin_padding_size_small"
                    android:paddingRight="@dimen/margin_padding_size_large"
                    android:paddingBottom="@dimen/margin_padding_size_small"
                    android:text=""
                    android:textSize="@dimen/text_size_medium" />
            </LinearLayout>
        </RelativeLayout>

    </RelativeLayout>
</LinearLayout>