<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/White"
    android:focusable="true"
    android:focusableInTouchMode="true"
    tools:context=".home.highlight.DetailHighlightActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/row_toolbar_image" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                style="@style/sfDisplayFont"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/margin_padding_size_medium"
                android:text="@string/title_detail"
                android:textSize="@dimen/margin_padding_size_medium"
                android:id="@+id/tvTitle"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/margin_padding_size_medium"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                android:orientation="horizontal">

                <TextView
                    style="@style/sfDisplayFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/by"
                    android:textColor="@color/NormalColorText" />

                <TextView
                    style="@style/sfDisplayFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding_size_small"
                    android:text="Media Data RC"
                    android:id="@+id/tvAuthor"
                    android:textColor="@color/FocusColorText" />

                <TextView
                    style="@style/sfDisplayFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding_size_small"
                    android:text="@string/on"
                    android:textColor="@color/NormalColorText" />

                <TextView
                    style="@style/sfDisplayFont"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/margin_padding_size_small"
                    android:text="June 9 2018"
                    android:id="@+id/tvDate"
                    android:textColor="@color/FocusColorText" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_size_small"
                android:layout_marginRight="@dimen/margin_padding_size_medium"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/margin_padding_size_medium"
                        android:visibility="invisible"
                        android:background="@color/LightGrey" />
                </FrameLayout>

                <ImageView
                    android:id="@+id/mark_news_top"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/margin_padding_size_small"
                    android:layout_margin="@dimen/margin_padding_size_micro"
                    android:src="@drawable/icon_mark" />

                <ImageView
                    android:id="@+id/mark_share"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/margin_padding_size_micro"
                    android:padding="@dimen/margin_padding_size_small"
                    android:src="@drawable/icon_share" />

            </LinearLayout>

            <ImageView
                android:id="@+id/banner_news"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:adjustViewBounds="true"
                android:layout_marginTop="@dimen/margin_padding_size_medium"
                android:src="@drawable/img_news" />

            <WebView
                android:id="@+id/article_detail_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/margin_padding_size_medium"
                android:layout_weight="1"/>

