<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <include layout="@layout/row_toolbar" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/d_13"
        android:orientation="vertical">
        <android.support.v7.widget.CardView
            android:id="@+id/find_service_provider"
            android:layout_marginBottom="@dimen/margin_padding_size_small"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            tools:ignore="UnusedAttribute">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/d_17"
                    android:src="@drawable/icon_service"
                    android:contentDescription="@string/service_purpose_appointment"/>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="@dimen/text_size_small"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d_13"
                    android:layout_marginRight="@dimen/d_13"
                    android:layout_marginTop="@dimen/margin_padding_size_small"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:textSize="15sp"
                    android:text="@string/find_service_provider"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:id="@+id/find_outreach_worker"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:elevation="5dp"
            tools:ignore="UnusedAttribute">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">
                <ImageView
                    android:layout_width="44dp"
                    android:layout_height="35dp"
                    android:layout_margin="@dimen/d_17"
                    android:src="@drawable/icon_outreach"
                    android:contentDescription="@string/service_purpose_appointment"/>
                <View
                    android:layout_width="1dp"
                    android:layout_marginTop="@dimen/text_size_small"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:layout_height="match_parent"
                    android:background="@drawable/line"/>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginLeft="@dimen/d_13"
                    android:layout_marginRight="@dimen/d_13"
                    android:layout_marginTop="@dimen/margin_padding_size_small"
                    android:layout_marginBottom="@dimen/margin_padding_size_small"
                    android:textSize="15sp"
                    android:text="@string/find_outreach_worker"/>
            </LinearLayout>
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/tvLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
        <TextView
            android:id="@+id/tvLongitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:visibility="invisible"/>
    </LinearLayout>

</LinearLayout>