<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:theme="@style/DialogTheme">
    <ImageView
        android:id="@+id/btn_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_size_small"
        android:src="@drawable/icon_searc_close"
        android:layout_alignParentEnd="true"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/margin_padding_size_medium"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="73.33dp"
                android:layout_height="57.67dp"
                android:layout_gravity="center"
                android:layout_margin="@dimen/margin_padding_size_micro"
                android:src="@drawable/icon_biomedical_no_text" />
            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:minHeight="80dp"
                android:layout_marginStart="@dimen/margin_padding_size_small"
                android:layout_marginEnd="@dimen/margin_padding_size_medium"
                android:background="@drawable/line"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_medium"
                    android:text="Biomedical" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="@color/NormalGreyText"
                    android:textSize="@dimen/text_size_micro"
                    android:text="@string/biomedical_description_text" />
            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginTop="@dimen/margin_padding_size_small"
            android:layout_marginBottom="@dimen/margin_padding_size_medium"
            android:background="@drawable/shadow_line"/>
        <android.support.v7.widget.CardView
            android:id="@+id/btn_biomedical_appointment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="5dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minHeight="47dp"
                    android:orientation="horizontal"
                    android:background="@drawable/rounded_orange_transparent">
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:minWidth="47dp"
                        android:layout_height="match_parent"
                        android:background="@color/Orange01"
                        android:padding="@dimen/margin_padding_size_small"
                        android:gravity="center">
                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:scaleType="centerCrop"
                            android:src="@drawable/icon_purpose"/>
                    </LinearLayout>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:paddingLeft="@dimen/margin_padding_size_medium"
                        android:layout_gravity="center_vertical"
                        android:paddingRight="@dimen/margin_padding_size_medium"
                        android:paddingTop="@dimen/margin_padding_size_micro"
                        android:paddingBottom="@dimen/margin_padding_size_micro"
                        android:textStyle="bold"
                        android:textSize="@dimen/text_size_medium"
                        android:text="@string/purpose_biomedical_appointment"/>
                </LinearLayout>
        </android.support.v7.widget.CardView>
    </LinearLayout>

</RelativeLayout>