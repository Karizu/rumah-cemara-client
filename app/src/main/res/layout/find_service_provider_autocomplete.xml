<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center_vertical"
    android:background="@color/Black"
    android:padding="@dimen/margin_padding_size_micro"
    android:paddingLeft="@dimen/margin_padding_size_micro"
    android:paddingRight="@dimen/margin_padding_size_micro">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:cardCornerRadius="5dp"
        app:cardBackgroundColor="@color/TransparentWhite"
        android:elevation="5dp"
        tools:ignore="UnusedAttribute">
        <android.support.v7.widget.SearchView
            android:id="@+id/search_view"
            app:searchIcon="@drawable/icon_search"
            app:closeIcon="@drawable/icon_close"
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:layout_margin="10dp"
            android:gravity="center"
            android:layout_gravity="center">

        </android.support.v7.widget.SearchView>
    </android.support.v7.widget.CardView>


</LinearLayout>