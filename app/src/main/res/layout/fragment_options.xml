<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".options.fragment.OptionsFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include layout="@layout/home_toolbar"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >

                <TextView
                    android:id="@+id/edit"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/edit"
                    android:textSize="@dimen/text_size_large"
                    android:textColor="@color/edit"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentTop="true"
                    android:layout_margin="@dimen/margin_padding_size_medium"/>

                <LinearLayout
                    android:id="@+id/bio"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_margin="@dimen/margin_padding_size_large"
                    >

                    <ImageView
                        android:id="@+id/img_profile"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/select_dp"/>

                    <TextView
                        android:id="@+id/user_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:text="Reza Yuda"
                        android:fontFamily="@font/sf_pro_display"
                        android:layout_marginTop="@dimen/margin_padding_size_medium"
                        />

                    <TextView
                        android:id="@+id/user_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/text_size_medium"
                        android:fontFamily="@font/sf_pro_display"
                        android:text="id: Rezayuda"/>

                    <TextView
                        android:id="@+id/user_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorAccent"
                        android:fontFamily="@font/sf_pro_display"
                        android:textSize="@dimen/text_size_medium"
                        android:text="+6285793134658"/>

                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="@dimen/margin_padding_size_small"
                    android:background="@drawable/shadow_line"
                    android:layout_below="@id/bio"/>

            </RelativeLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginTop="@dimen/margin_padding_size_small"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/privacy_settings"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/privacy_settings"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/margin_padding_size_small"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/notification"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/notification"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/faq"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/faq"
                        android:textAllCaps="true"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/terms_condition"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/terms_condition"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/share_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/share_app"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/rate_app"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rate_app"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:background="@drawable/shadow_line"/>

                    <TextView
                        android:id="@+id/Logout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/logout"
                        android:textSize="@dimen/text_size_medium"
                        android:layout_margin="@dimen/margin_padding_size_medium"/>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:layout_marginBottom="@dimen/margin_padding_size_small"
                        android:background="@drawable/shadow_line"/>

                </LinearLayout>

            </ScrollView>
        </LinearLayout>
    </LinearLayout>



</FrameLayout>