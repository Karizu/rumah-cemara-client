<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/White">

    <ImageView
        android:id="@+id/ic_close"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_searc_close"
        android:padding="@dimen/margin_padding_size_small"
        android:layout_gravity="right"
        tools:ignore="RtlHardcoded" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="21dp"
                android:layout_height="21dp"
                android:layout_marginRight="@dimen/margin_padding_size_small"
                android:src="@drawable/icon_biomedical_dark"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Biodemical Appointment"
                android:textColor="@color/Black"
                android:textSize="18sp"
                android:textStyle="bold"/>
        </LinearLayout>
        <TextView
            android:id="@+id/date"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Thursday, 30 Agustus 2018"
            android:gravity="center"
            android:textSize="14sp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/NormalGreyText"/>
    </LinearLayout>


    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shadow_line"/>

    <ImageView
        android:id="@+id/img_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/icon_biomedical"
        android:layout_gravity="center"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/txt_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Akmal M Kristanto"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="@color/NormalColorText"/>

    <TextView
        android:id="@+id/txt_no_hp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:text="+6285694302802"
        android:gravity="center"
        android:textSize="14sp"
        android:layout_marginBottom="5dp"
        android:textColor="@color/NormalGreyText"/>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="5dp"
        android:background="@drawable/shadow_line"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="How was your appointment?"
        android:textSize="15sp"
        android:padding="10dp"
        android:textColor="@color/NormalColorText"/>

    <RatingBar
        android:id="@+id/ratingBar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:numStars="5"
        android:stepSize="1"
        android:rating="4"
        android:layout_gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Comment"
        android:paddingStart="10dp"
        android:paddingEnd="10dp"
        android:layout_marginTop="20dp"/>

    <EditText
        android:id="@+id/txt_komentar"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:layout_margin="10dp"
        android:background="@drawable/rounded_grey_transparent"
        android:text="Harus lebih baik lagi"
        android:gravity="start"
        android:padding="@dimen/margin_padding_size_small"
        android:textSize="15sp"
        android:textColor="@color/NormalGreyText"/>

    <Button
        android:id="@+id/btn_rate"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:background="@drawable/btn_rounded_blackyellow"
        android:text="Rate"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="20dp"
        android:textColor="@color/White"
        android:textSize="14sp"
        android:textAllCaps="false"
        android:gravity="center"
        android:layout_gravity="center"/>

</LinearLayout>