<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingTop="@dimen/margin_padding_size_small"
    android:paddingBottom="@dimen/margin_padding_size_small"
    android:paddingRight="@dimen/margin_padding_size_medium"
    android:paddingLeft="@dimen/margin_padding_size_medium"
    style="@style/sfDisplayFont"
    android:padding="@dimen/margin_padding_size_small"
    android:background="@color/White"
    app:behavior_hideable="true"
    app:behavior_peekHeight="50dp"
    tools:showIn="@layout/find_service_provider_activity"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior"
    android:orientation="vertical">
    <RelativeLayout
        android:id="@+id/btn_sheet_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/margin_padding_size_micro"
            android:textSize="@dimen/text_size_medium"
            android:text="Search Result"/>
        <ImageView
            android:id="@+id/img_navigation"
            android:layout_width="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_arrow_up"/>
    </RelativeLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/result_recycler"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</LinearLayout>