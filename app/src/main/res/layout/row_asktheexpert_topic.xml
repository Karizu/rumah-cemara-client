<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginRight="5dp"
    android:layout_marginBottom="@dimen/margin_padding_size_small"
    app:cardCornerRadius="5dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/margin_padding_size_medium"
        android:paddingTop="@dimen/margin_padding_size_small"
        android:paddingRight="@dimen/margin_padding_size_medium"
        android:paddingBottom="@dimen/margin_padding_size_medium"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:orientation="vertical">

            <TextView
                android:id="@+id/topic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/sf_pro_display"
                android:text="Cara menangani bintik-bintik akibat AIDS"
                android:textColor="@color/Black"
                android:textSize="@dimen/text_size_small" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/margin_padding_size_small"
                    android:textSize="@dimen/text_size_nano"
                    android:text="@string/create_on" />

                <TextView
                    android:id="@+id/date_topic"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="June 9 2018"
                    android:textSize="@dimen/text_size_nano"
                    android:textColor="@color/edit" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical|center_horizontal">

            <LinearLayout
                android:layout_width="23dp"
                android:layout_height="23dp"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/circle_orange">

                <TextView
                    android:id="@+id/notif_count"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="@dimen/text_size_micro"
                    android:textAlignment="center"
                    android:textColor="@color/White" />


            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>