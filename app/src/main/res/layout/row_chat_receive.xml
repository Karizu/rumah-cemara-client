<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_padding_size_medium">

    <ImageView
        android:id="@+id/img_profile"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:src="@drawable/select_dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buble_chat_putih_edit"
        android:textSize="@dimen/text_size_medium"
        android:paddingTop="@dimen/margin_padding_size_small"
        android:paddingBottom="@dimen/margin_padding_size_small"
        android:paddingLeft="@dimen/margin_padding_size_large"
        android:paddingRight="@dimen/margin_padding_size_large"
        android:text="Cara mencegahnya yaitu dengan tidak mengonsumsi narkoba dan juga hindari seks bebas."/>

</LinearLayout>