<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/cv_event"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardElevation="0dp"
        card_view:cardUseCompatPadding="true">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/margin_padding_size_small"
            android:id="@+id/layout_event"
            android:theme="@style/quicksandTheme">

            <android.support.v7.widget.CardView
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_weight="1"
                card_view:cardCornerRadius="4dp"
                card_view:cardElevation="0dp">

                <ImageView
                    android:id="@+id/event_image"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="@string/example_imagenews_description"
                    android:scaleType="centerCrop"
                    android:src="@drawable/img_news" />
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:paddingLeft="@dimen/margin_padding_size_small">

                <TextView
                    android:id="@+id/event_title_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textStyle="bold"
                    android:textSize="@dimen/text_size_small"
                    android:text="@string/event_title" />

                <TextView
                    android:id="@+id/event_address_text"
                    android:textSize="@dimen/text_size_micro"
                    android:layout_width="wrap_content"
                    android:textColor="@color/NormalGreyText"
                    android:layout_height="wrap_content"
                    android:text="Jln Buah Batu no. 29 Bandung"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:layout_marginTop="@dimen/margin_padding_size_small"
                    android:elevation="10dp"
                    android:orientation="horizontal"
                    tools:ignore="RtlHardcoded,UnusedAttribute">

                    <ImageView
                        android:id="@+id/event_reminder_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin_padding_size_micro"
                        android:contentDescription="@string/mark_description"
                        android:src="@drawable/icon_bell" />

                    <ImageView
                        android:id="@+id/event_share_icon"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:padding="@dimen/margin_padding_size_micro"
                        android:contentDescription="@string/share_description"
                        android:src="@drawable/icon_share" />
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
       android:background="@drawable/shadow_line"/>
</LinearLayout>

