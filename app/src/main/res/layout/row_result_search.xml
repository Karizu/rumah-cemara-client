<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/parentCardView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    card_view:cardElevation="2dp"
    card_view:cardCornerRadius="5dp"
    card_view:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_margin="5dp"
        android:orientation="horizontal"
        android:paddingLeft="@dimen/margin_padding_size_medium"
        android:paddingRight="@dimen/margin_padding_size_medium"
        android:layout_marginTop="@dimen/margin_padding_size_small"
        android:layout_marginBottom="@dimen/margin_padding_size_small"
        android:theme="@style/quicksandTheme">

        <ImageView
            android:id="@+id/result_img"
            android:layout_width="45dp"
            android:layout_height="45dp"
            android:layout_gravity="center_vertical"
            android:src="@drawable/select_dp"
            android:scaleType="centerCrop"
            android:contentDescription="@string/example_imagenews_description" />
        <View
            android:layout_width="1dp"
            android:layout_marginRight="@dimen/margin_padding_size_medium"
            android:layout_marginLeft="@dimen/margin_padding_size_medium"
            android:layout_height="match_parent"
            android:background="@drawable/line"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:orientation="vertical">
            <TextView
                android:id="@+id/result_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/Black"
                android:text="Rumah Sakit Hasan Sadikin"/>
            <TextView
                android:id="@+id/result_range"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/NormalGreyText"
                android:text="1 km"/>
        </LinearLayout>


    </LinearLayout>

</android.support.v7.widget.CardView>