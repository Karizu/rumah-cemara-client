<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    app:layout_behavior="android.support.design.widget.BottomSheetBehavior">

    <include
        android:id="@+id/toolbar" layout="@layout/row_toolbar" />
    <include
        layout="@layout/find_service_provider_autocomplete"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <include layout="@layout/map_content"
            android:layout_weight="1"
            android:layout_height="0dp"
            android:layout_width="match_parent"/>
        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            style="@style/sfDisplayFont">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/margin_padding_size_small"
                android:padding="@dimen/margin_padding_size_medium">

                <ImageView
                    android:layout_width="75dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/icon_alamat" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/location_address"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/example_address"
                        android:textSize="@dimen/text_size_small" />
                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_set_location"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Set Location"
                android:textAllCaps="false"
                android:textColor="@color/White"
                android:background="@drawable/gradient_orange"
                />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>