<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".home.service.structural.StructuralLegalAidActivity">

    <!--<include layout="@layout/row_toolbar"/>-->
    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/Black"
        app:logo="@drawable/icon_structural_white"
        app:popupTheme="@style/AppTheme" >
        <TextView
            android:id="@+id/text_toolbar_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="left|center_vertical"
            android:layout_marginLeft="5dp"
            android:text="Structural - Legal Aid"
            android:textColor="@android:color/white"
            android:textAppearance="?android:attr/textAppearanceLarge" />
    </android.support.v7.widget.Toolbar>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/dsc_material"
        android:textSize="14sp"
        android:layout_marginTop="15dp"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="10dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/rounded_grey_transparent"
        android:orientation="vertical">

        <EditText
            android:id="@+id/edit_dsc_material"
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:backgroundTint="@android:color/transparent"
            tools:ignore="UnusedAttribute" />
    </LinearLayout>

</LinearLayout>